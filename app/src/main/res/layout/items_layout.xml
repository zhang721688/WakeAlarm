<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:background="@color/background_alarm_white"
    android:minHeight="@dimen/dp_150"
    >

    <RelativeLayout
        android:id="@+id/lay_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/re_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="10dp"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif-thin"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="15.00"
            android:textColor="@color/c_00bb9c"
            android:textSize="43sp" />

        <LinearLayout
            android:layout_below="@id/re_time"
            android:layout_alignLeft="@id/re_time"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/re_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="5555"
                android:textColor="@color/primary_text_grey"
                android:textSize="21sp" />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/re_repeatType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="00"
                android:textColor="@color/primary_text_grey"
                android:textSize="16sp" />

        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/thumbnail_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/delete_image"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_delete" />

    <ImageView
        android:id="@+id/active_image"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_toLeftOf="@id/delete_image"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_ring_off" />
</RelativeLayout>
